<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.Views.GifPage"
             Title="GIF Page">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <WebView WidthRequest="300" HeightRequest="300">
            <WebView.Source>
                <HtmlWebViewSource>
                    <HtmlWebViewSource.Html>
                        <![CDATA[
                            <html>
                                <body style="margin:0; padding:0; background-color:black;">
                                    <img src="https://media2.giphy.com/media/v1.Y2lkPTc5MGI3NjExcGkxanpsMTM1am5vYXc5dWgwdno0d2xwNng4a212ZzR6OG9zczl1cCZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/l8hPrMxwt5SzeomWGe/giphy.gif"
                                         style="width:100%; height:100%; object-fit:contain;" />
                                </body>
                            </html>
                        ]]>
                    </HtmlWebViewSource.Html>
                </HtmlWebViewSource>
            </WebView.Source>
        </WebView>

        <Button Text="Retour"
                Clicked="OnBackButtonClicked"
                Margin="20" />
    </StackLayout>
</ContentPage>