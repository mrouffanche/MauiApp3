<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.Views.AddBeerPage"
             Title="Détails de la bière">

    <ScrollView>
        <StackLayout Padding="10" Spacing="10">
            <Entry x:Name="TitleEntry" Placeholder="Nom de la bière" />
            <Entry x:Name="DescriptionEntry" Placeholder="Prix ou description" />
            <Entry x:Name="ImageEntry" Placeholder="URL de l'image" />

            <Button Text="Ajouter" Clicked="OnAddClicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>