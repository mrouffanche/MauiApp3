<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.Views.BeerDetailPage"
             Title="Détails de la bière">

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Image x:Name="BeerImage"
                   WidthRequest="200"
                   HeightRequest="200"
                   Aspect="AspectFit" />
            <Label x:Name="BeerName"
                   FontSize="24"
                   HorizontalOptions="Center"
                   Margin="0, 20, 0, 10" />
            <Label x:Name="BeerTagline"
                   FontSize="18"
                   HorizontalOptions="Center" />
            <Label x:Name="BeerDescription"
                   FontSize="14"
                   Margin="0, 20, 0, 10" />
            <Label x:Name="BeerRating" FontSize="14" TextColor="Gray" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>